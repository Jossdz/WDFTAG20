<h1>Create new album</h1>
<hr>
<form action="/album/create" method="post">
  <div class="form-group">
    <label for="title">Title:</label>
    <input name="title" type="text" class="form-control" id="title" />
  </div>
  <div class="form-group">
    <label for="year">year:</label>
    <input name="year" type="number" class="form-control" id="name" />
  </div>
  <div class="form-group">
    <label for="items">items:</label>
    <input name="items" type="number" class="form-control" id="name" />
  </div>
  <div class="form-group">
    <label for="name">Genre:</label>
    <select class="custom-select" id="inputGroupSelect01" name="genre">
      <option selected>Choose...</option>
      <option value="rock">rock</option>
      <option value="indie">indie</option>
      <option value="cumbia">cumbia</option>
      <option value="hip-hop">hip-hop</option>
      <option value="pop">pop</option>
      <option value="game-ost">game-ost</option>
      <option value="jazz-fusion">jazz-fusion</option>
    </select>
  </div>
  <div class="form-group">
    <label for="artist">Artist:</label>
    <select class="custom-select" id="artist" name="artistId">
      <option selected>Choose...</option>
      {{#each artists}}

      <option value="{{_id}}">{{name}}</option>
      {{/each }}
    </select>
  </div>
  <button type="submit" class="btn btn-block btn-primary">Create</button>
</form>