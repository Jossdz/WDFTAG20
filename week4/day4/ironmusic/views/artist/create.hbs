<h1>Create new artist</h1>
<hr>
<form action="/artist/create" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input name="name" type="text" class="form-control" id="name" />
  </div>
  <div class="form-group">
    <label for="name">Email:</label>
    <input name="email" type="text" class="form-control" id="name" />
  </div>
  <div class="form-group">
    <label for="name">Genre:</label>
    <select class="custom-select" id="inputGroupSelect01" name="genre">
      <option selected>Choose...</option>
      <option value="rock">rock</option>
      <option value="indie">indie</option>
      <option value="cumbia">cumbia</option>
      <option value="hip-hop">hip-hop</option>
      <option value="pop">pop</option>
      <option value="game-ost">game-ost</option>
      <option value="jazz-fusion">jazz-fusion</option>
    </select>
  </div>
  <button type="submit" class="btn btn-block btn-primary">Create</button>
</form>